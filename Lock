#include <ESP8266WiFi.h>
#include <ESP8266WebServer.h>

/*Put your SSID & Password*/
const char* ssid = "Sakura";  // Enter SSID here
const char* password = "TARA061628";  //Enter Password here

ESP8266WebServer server(80);

int lock_time = 100; // 1000ms = 1s

uint8_t LED1pin = D0;
bool Door1status = LOW;

uint8_t LED2pin = D1;
bool Door2status = LOW;

uint8_t LED3pin = D2;
bool Door3status = LOW;

uint8_t LED4pin = D3;
bool Door4status = LOW;

uint8_t LED5pin = D4;
bool Door5status = LOW;

uint8_t LED6pin = D5;
bool Door6status = LOW;

uint8_t LED7pin = D6;
bool Door7status = LOW;

uint8_t LED8pin = D7;
bool Door8status = LOW;

void setup() {
  Serial.begin(115200);
  delay(100);
  pinMode(LED1pin, OUTPUT);
  pinMode(LED2pin, OUTPUT);
  pinMode(LED3pin, OUTPUT);
  pinMode(LED4pin, OUTPUT);
  pinMode(LED5pin, OUTPUT);
  pinMode(LED6pin, OUTPUT);
  pinMode(LED7pin, OUTPUT);
  pinMode(LED8pin, OUTPUT);

  Serial.println("Connecting to ");
  Serial.println(ssid);

  //connect to your local wi-fi network
  WiFi.begin(ssid, password);

  //check wi-fi is connected to wi-fi network
  while (WiFi.status() != WL_CONNECTED) {
    delay(1000);
    Serial.print(".");
  }
  Serial.println("");
  Serial.println("WiFi connected..!");
  Serial.print("Got IP: ");
  Serial.println(WiFi.localIP());

  server.on("/", handle_OnConnect);
  server.on("/door1open", handle_led1on);
  server.on("/door1close", handle_led1off);
  server.on("/door2open", handle_led2on);
  server.on("/door2close", handle_led2off);
  server.on("/door3open", handle_led3on);
  server.on("/door3close", handle_led3off);
  server.on("/door4open", handle_led4on);
  server.on("/door4close", handle_led4off);
  server.on("/door5open", handle_led5on);
  server.on("/door5close", handle_led5off);
  server.on("/door6open", handle_led6on);
  server.on("/door6close", handle_led6off);
  server.on("/door7open", handle_led7on);
  server.on("/door7close", handle_led7off);
  server.on("/door8open", handle_led8on);
  server.on("/door8close", handle_led8off);
  server.on("/status", handle_status);
  server.on("/apisetdoor1open", set_led1on);
  server.on("/apisetdoor1close", set_led1off);
  server.on("/apisetdoor2open", set_led2on);
  server.on("/apisetdoor2close", set_led2off);
  server.on("/apisetdoor3open", set_led3on);
  server.on("/apisetdoor3close", set_led3off);
  server.on("/apisetdoor4open", set_led4on);
  server.on("/apisetdoor4close", set_led4off);
  server.on("/apisetdoor5open", set_led5on);
  server.on("/apisetdoor5close", set_led5off);
  server.on("/apisetdoor6open", set_led6on);
  server.on("/apisetdoor6close", set_led6off);
  server.on("/apisetdoor7open", set_led7on);
  server.on("/apisetdoor7close", set_led7off);
  server.on("/apisetdoor8open", set_led8on);
  server.on("/apisetdoor8close", set_led8off);

  server.onNotFound(handle_NotFound);

  server.begin();
  Serial.println("HTTP server started");

  Serial.println("JSON Test");
  String response = "{\n";
  if(Door1status) {
    response+= "  \"Door1\": \"1\",\n";
  }
  else {
    response+= "  \"Door1\": \"0\",\n";
  }
  if(Door2status) {
    response+= "  \"Door2\": \"1\",\n";
  }
  else {
    response+= "  \"Door2\": \"0\",\n";
  }
  if(Door3status) {
    response+= "  \"Door3\": \"1\",\n";
  }
  else {
    response+= "  \"Door3\": \"0\",\n";
  }
  if(Door4status) {
    response+= "  \"Door4\": \"1\",\n";
  }
  else {
    response+= "  \"Door4\": \"0\",\n";
  }
  if(Door5status) {
    response+= "  \"Door5\": \"1\",\n";
  }
  else {
    response+= "  \"Door5\": \"0\",\n";
  }
  if(Door6status) {
    response+= "  \"Door6\": \"1\",\n";
  }
  else {
    response+= "  \"Door6\": \"0\",\n";
  }
  if(Door7status) {
    response+= "  \"Door7\": \"1\",\n";
  }
  else {
    response+= "  \"Door7\": \"0\",\n";
  }
  if(Door8status) {
    response+= "  \"Door8\": \"1\",\n";
  }
  else {
    response+= "  \"Door8\": \"0\",\n";
  }
  response+="}";
  Serial.println(response);

  // Serial.println("HIGH LOW Test");
  // Serial.println(String(HIGH));
  // Serial.println(String(LOW));

  // Serial.println("HIGH LOW Test");
  // if(HIGH) {
  //   Serial.println("HIGH");
  // }
  // else {
  //   Serial.println("LOW");
  // }
}

void loop() {
  server.handleClient();
  if(Door1status) {
    digitalWrite(LED1pin, HIGH);  // turn the LED on (HIGH is the voltage level)
    // delay(lock_time);                      // wait for a second
    // digitalWrite(LED1pin, LOW);   // turn the LED off by making the voltage LOW
    // Door1status = LOW;
  }
  else {
    digitalWrite(LED1pin, LOW);
  }
  
  if(Door2status) {
    digitalWrite(LED2pin, HIGH);
    // delay(lock_time);
    // digitalWrite(LED2pin, LOW);
    // Door2status = LOW;
  }
  else {
    digitalWrite(LED2pin, LOW);
  }

  if(Door3status) {
    digitalWrite(LED3pin, HIGH);
    // delay(lock_time);
    // digitalWrite(LED3pin, LOW);
    // Door3status = LOW;
  }
  else {
    digitalWrite(LED3pin, LOW);
  }

  if(Door4status) {
    digitalWrite(LED4pin, HIGH);
    // delay(lock_time);
    // digitalWrite(LED4pin, LOW);
    // Door4status = LOW;
  }
  else {
    digitalWrite(LED4pin, LOW);
  }

  if(Door5status) {
    digitalWrite(LED5pin, HIGH);
    // delay(lock_time);
    // digitalWrite(LED5pin, LOW);
    // Door5status = LOW;
  }
  else {
    digitalWrite(LED5pin, LOW);
  }

  if(Door6status) {
    digitalWrite(LED6pin, HIGH);
    // delay(lock_time);
    // digitalWrite(LED6pin, LOW);
    // Door6status = LOW;
  }
  else {
    digitalWrite(LED6pin, LOW);
  }

  if(Door7status) {
    digitalWrite(LED7pin, HIGH);
    // delay(lock_time);
    // digitalWrite(LED7pin, LOW);
    // Door7status = LOW;
  }
  else {
    digitalWrite(LED7pin, LOW);
  }

  if(Door8status) {
    digitalWrite(LED8pin, HIGH);
    // delay(lock_time);
    // digitalWrite(LED8pin, LOW);
    // Door8status = LOW;
  }
  else {
    digitalWrite(LED8pin, LOW);
  }
}

void handle_OnConnect() {
  Serial.println("handle_OnConnect");
  // Door1status = LOW;
  // Door2status = LOW;
  // Door3status = LOW;
  // Door4status = LOW;
  // Door5status = LOW;
  // Door6status = LOW;
  // Door7status = LOW;
  // Door8status = LOW;
  // Serial.println("GPIO0 Status: Close | GPIO1 Status: Close | GPIO2 Status: Close | GPIO3 Status: Close | GPIO4 Status: Close | GPIO5 Status: Close | GPIO6 Status: Close | GPIO7 Status: Close");
  server.send(200, "text/html", SendHTML(Door1status,Door2status,Door3status,Door4status,Door5status,Door6status,Door7status,Door8status));
}

void handle_led1on() {
  Door1status = HIGH;
  Serial.println("GPIO0 Status: Open");
  server.send(200, "text/html", SendHTML(true,Door2status,Door3status,Door4status,Door5status,Door6status,Door7status,Door8status)); 
}

void handle_led1off() {
  Door1status = LOW;
  Serial.println("GPIO0 Status: Close");
  server.send(200, "text/html", SendHTML(false,Door2status,Door3status,Door4status,Door5status,Door6status,Door7status,Door8status)); 
}

void handle_led2on() {
  Door2status = HIGH;
  Serial.println("GPIO1 Status: Open");
  server.send(200, "text/html", SendHTML(Door1status,true,Door3status,Door4status,Door5status,Door6status,Door7status,Door8status)); 
}

void handle_led2off() {
  Door2status = LOW;
  Serial.println("GPIO1 Status: Close");
  server.send(200, "text/html", SendHTML(Door1status,false,Door3status,Door4status,Door5status,Door6status,Door7status,Door8status)); 
}

