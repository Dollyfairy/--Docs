  Serial.println("set_led8off(), GPIO7 Status: close");
  degug();
  server.send(200, "text/json", response);
}

void degug() {
  Serial.println("JSON Test");
  String response = "{\n";
  if(Door1status) {
    response+= "  \"Door1\": \"1\",\n";
  }
  else {
    response+= "  \"Door1\": \"0\",\n";
  }
  if(Door2status) {
    response+= "  \"Door2\": \"1\",\n";
  }
  else {
    response+= "  \"Door2\": \"0\",\n";
  }
  if(Door3status) {
    response+= "  \"Door3\": \"1\",\n";
  }
  else {
    response+= "  \"Door3\": \"0\",\n";
  }
  if(Door4status) {
    response+= "  \"Door4\": \"1\",\n";
  }
  else {
    response+= "  \"Door4\": \"0\",\n";
  }
  if(Door5status) {
    response+= "  \"Door5\": \"1\",\n";
  }
  else {
    response+= "  \"Door5\": \"0\",\n";
  }
  if(Door6status) {
    response+= "  \"Door6\": \"1\",\n";
  }
  else {
    response+= "  \"Door6\": \"0\",\n";
  }
  if(Door7status) {
    response+= "  \"Door7\": \"1\",\n";
  }
  else {
    response+= "  \"Door7\": \"0\",\n";
  }
  if(Door8status) {
    response+= "  \"Door8\": \"1\",\n";
  }
  else {
    response+= "  \"Door8\": \"0\",\n";
  }
  response+="}";
  Serial.println(response);
}
