}

void handle_NotFound(){
  server.send(404, "text/plain", "Not found");
}

String SendHTML(uint8_t led1stat,uint8_t led2stat,uint8_t led3stat,uint8_t led4stat,uint8_t led5stat,uint8_t led6stat,uint8_t led7stat,uint8_t led8stat) {
  String ptr = "<!DOCTYPE html> <html>\n";
  ptr +="<head><meta name=\"viewport\" content=\"width=device-width, initial-scale=1.0, user-scalable=no\">\n";
  ptr +="<title>Food Power</title>\n";
  ptr +="<style>html { font-family: Helvetica; display: inline-block; margin: 0px auto; text-align: center;}\n";
  ptr +="body{margin-top: 30px;} h1 {color: #444444;margin: 30px auto 20px;} h3 {color: #444444;margin-bottom: 30px;}\n";
  ptr +=".button {display: block;width: 80px;background-color: #1abc9c;border: none;color: white;padding: 10px 0px;text-decoration: none;font-size: 25px;margin: 0px auto 35px;cursor: pointer;border-radius: 4px;}\n";
  ptr +=".button-on {background-color: #1abc9c;}\n";
  ptr +=".button-on:active {background-color: #16a085;}\n";
  ptr +=".button-off {background-color: #34495e;}\n";
  ptr +=".button-off:active {background-color: #2c3e50;}\n";
  ptr +="p {font-size: 14px;color: #888;margin-bottom: 10px;}\n";
  ptr +="a {margin-bottom: 0px!important}\n";
  ptr +="</style>\n";
  ptr +="</head>\n";
  ptr +="<body>\n";
  // ptr +="<h1>ESP8266 Web Server - <span style='color: red;'>test </span></h1>\n";
  // ptr +="<h3>Food Power</h3>\n";
  ptr +="<h1>Food Power</h1>\n";
  
   if(led1stat)
  {
    ptr +="<p>Door 1 Status: Open</p><a class=\"button button-off\" href=\"/door1close\">Close</a>\n";
    // ptr +="<script type=\"text/javascript\">setTimeout(() => {location.href = \"/\";}, \"1000\");</script>\n";
  }
  else
  {
    ptr +="<p>Door 1 Status: Close</p><a class=\"button button-on\" href=\"/door1open\">Open</a>\n";
  }

  if(led2stat)
  {
    ptr +="<p>Door 2 Status: Open</p><a class=\"button button-off\" href=\"/door2close\">Close</a>\n";
    // ptr +="<script type=\"text/javascript\">setTimeout(() => {location.href = \"/\";}, \"1000\");</script>\n";
  }
  else
  {
    ptr +="<p>Door 2 Status: Close</p><a class=\"button button-on\" href=\"/door2open\">Open</a>\n";
  }

  if(led3stat)
  {
    ptr +="<p>Door 3 Status: Open</p><a class=\"button button-off\" href=\"/door3close\">Close</a>\n";
    // ptr +="<script type=\"text/javascript\">setTimeout(() => {location.href = \"/\";}, \"1000\");</script>\n";
  }
  else
  {
    ptr +="<p>Door 3 Status: Close</p><a class=\"button button-on\" href=\"/door3open\">Open</a>\n";
  }

  if(led4stat)
  {
    ptr +="<p>Door 4 Status: Open</p><a class=\"button button-off\" href=\"/door4close\">Close</a>\n";
    // ptr +="<script type=\"text/javascript\">setTimeout(() => {location.href = \"/\";}, \"1000\");</script>\n";
  }
  else
  {
    ptr +="<p>Door 4 Status: Close</p><a class=\"button button-on\" href=\"/door4open\">Open</a>\n";
  }

  if(led5stat)
  {
    ptr +="<p>Door 5 Status: Open</p><a class=\"button button-off\" href=\"/door5close\">Close</a>\n";
    // ptr +="<script type=\"text/javascript\">setTimeout(() => {location.href = \"/\";}, \"1000\");</script>\n";
  }
  else
  {
    ptr +="<p>Door 5 Status: Close</p><a class=\"button button-on\" href=\"/door5open\">Open</a>\n";
  }

  if(led6stat)
  {
    ptr +="<p>Door 6 Status: Open</p><a class=\"button button-off\" href=\"/door6close\">Close</a>\n";
    // ptr +="<script type=\"text/javascript\">setTimeout(() => {location.href = \"/\";}, \"1000\");</script>\n";
  }
  else
  {
    ptr +="<p>Door 6 Status: Close</p><a class=\"button button-on\" href=\"/door6open\">Open</a>\n";
  }

  if(led7stat)
  {
    ptr +="<p>Door 7 Status: Open</p><a class=\"button button-off\" href=\"/door7close\">Close</a>\n";
    // ptr +="<script type=\"text/javascript\">setTimeout(() => {location.href = \"/\";}, \"1000\");</script>\n";
  }
  else
  {
    ptr +="<p>Door 7 Status: Close</p><a class=\"button button-on\" href=\"/door7open\">Open</a>\n";
  }

  if(led8stat)
  {
    ptr +="<p>Door 8 Status: Open</p><a class=\"button button-off\" href=\"/door8close\">Close</a>\n";
    // ptr +="<script type=\"text/javascript\">setTimeout(() => {location.href = \"/\";}, \"1000\");</script>\n";
  }
  else
  {
    ptr +="<p>Door 8 Status: Close</p><a class=\"button button-on\" href=\"/door8open\">Open</a>\n";
  }
  ptr +="</body>\n";
  ptr +="</html>\n";
  return ptr;
}

void handle_status() {
  String response = "{\n";
  if(Door1status) {
    response+= "  \"Door1\": \"1\",\n";
  }
  else {
    response+= "  \"Door1\": \"0\",\n";
  }
  if(Door2status) {
    response+= "  \"Door2\": \"1\",\n";
  }
  else {
    response+= "  \"Door2\": \"0\",\n";
  }
  if(Door3status) {
    response+= "  \"Door3\": \"1\",\n";
  }
  else {
    response+= "  \"Door3\": \"0\",\n";
  }
  if(Door4status) {
    response+= "  \"Door4\": \"1\",\n";
  }
  else {
    response+= "  \"Door4\": \"0\",\n";
  }
  if(Door5status) {
    response+= "  \"Door5\": \"1\",\n";
  }
  else {
    response+= "  \"Door5\": \"0\",\n";
  }
  if(Door6status) {
    response+= "  \"Door6\": \"1\",\n";
  }
  else {
    response+= "  \"Door6\": \"0\",\n";
  }
  if(Door7status) {
    response+= "  \"Door7\": \"1\",\n";
  }
  else {
    response+= "  \"Door7\": \"0\",\n";
  }
  if(Door8status) {
    response+= "  \"Door8\": \"1\",\n";
  }
  else {
    response+= "  \"Door8\": \"0\",\n";
  }
  response+="}";

  Serial.println("handle_status JSON Data:");
  Serial.println(response);
  degug();

  server.send(200, "text/json", response);
}


void set_led1on() {
  Door1status = HIGH;
  String response = "{\n";
  response+= "  \"Door1\": \"1\"\n";
  response+="}";
  Serial.println("set_led1on(), GPIO0 Status: open");
  degug();
  server.send(200, "text/json", response);
}

void set_led1off() {
  Door1status = LOW;
  String response = "{\n";
  response+= "  \"Door1\": \"0\"\n";
  response+="}";
  Serial.println("set_led1off(), GPIO0 Status: close");
  degug();
  server.send(200, "text/json", response);
}

